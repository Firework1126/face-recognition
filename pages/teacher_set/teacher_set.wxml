<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
	<view slot="backText">返回</view>
</cu-custom>
<view class="bg-gradual-pink">
  <view class="head">
    <view class="headlcon">
      <image src="/images/geren/teacher.png" style="width:170rpx;height:170rpx;" class="ig"></image>
    </view>
    <view class="login">
      <view>{{teacher_name}}</view>
      <view>工号:{{teacher_id}}</view>
    <!-- 这里要做成动态的获取，获取头像和昵称 -->
    </view>
  </view>
</view>
<!-- 上部显示个人信息 -->
<view class="item" bindtap=''>
  <view class="img">
    <image src="/images/geren/time.png" style="width:40rpx;height:40rpx;"></image>
  </view>
  <view class="name">学期</view>
  <view class="detail">
    <text>{{year}}-{{year+1}}{{season}}季学期</text>
  </view>
</view>
<!-- 学期 -->
<view class="item" bindtap="showModal" data-target="RadioModal">
  <view class="img">
    <image src="/images/geren/chuangjian.png" style="width:40rpx;height:40rpx;"></image>
  </view>
  <view class="name">创建课程</view>
  <view class="detail">
    <text>></text>
  </view>
</view>
<view class="cu-modal {{modalName=='RadioModal'?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog" catchtap>
    <radio-group class="block">
      <view class="cu-list menu text-left">
       <view class="drawer_box" >
        <view class="drawer_title">请输入课程名</view>
        <view class="drawer_content">
          <view class="top grid">
            <input class="input_base input_h30 col-1" bindinput='getInputValue' ></input>
          </view>
        </view>
        <view class="btn_ok" bindtap="hideModal">确定</view>
        </view>
      </view>
    </radio-group>
  </view>
</view>
<!-- 创建课程 -->
<view class="item" bindtap='add_students'>
  <view class="img">
    <image src="/images/geren/tianjia.png" style="width:40rpx;height:40rpx;"></image>
  </view>
  <view class="name" >添加学生</view>
  <view class="detail">
    <text>></text>
  </view>
</view>
<!-- 添加学生 -->
<view class="item" bindtap=''>
  <view class="img">
    <image src="/images/geren/fabu.png" style="width:40rpx;height:40rpx;"></image>
  </view>
  <view class="name" bindtap="">发布签到</view>
  <view class="detail">
    <text>></text>
  </view>
</view>
<!-- 发布签到 -->
<view class="item" bindtap=''>
  <view class="img">
    <image src="/images/geren/chakan.png" style="width:40rpx;height:40rpx;"></image>
  </view>
  <view class="name" bindtap="">查看课程</view>
  <view class="detail">
    <text>></text>
  </view>
</view>
<!-- 查看课程 -->
<button bindtap="check_students">查看我的学生列表</button>